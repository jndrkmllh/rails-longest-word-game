<h1>New Game</h1>
<div class="d-flex">
  <% @letters.each do |letter| %>
    <div class="bg-primary text-white m-2 px-3 py-2 fs-3 shadow font-monospace"><%= letter %></div>
  <% end %>
</div>
<form class="input-group mt-3 w-50" action="score" method="post" data-turbo="false">
  <input type="text" class="form-control" name="new">
  <input id="letters" name="letters" type="hidden" value=<%= @letters.join %> />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button class="btn btn-outline-secondary" type="submit">Play</button>
</form>
